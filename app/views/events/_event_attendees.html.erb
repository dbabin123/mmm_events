<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendees

    <a data-toggle="collapse" href="#event_attendees_new_form">
      Add going
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.attendees.each do |going| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to going, going %>

        <%= link_to going, method: :delete, data: { confirm: "Do you really want to delete this going" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_attendees_new_form">
        <%= render partial: "events/event_attendees_new_form" %>
      </div>
    </div>

  </ul>
</div>
