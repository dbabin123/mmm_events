<%= form_with(model: @event, local: true) do |f| %>

  <%= f.hidden_field :profile_id, value: @profile.id %>

  <div class="form-group">
    <%= f.label :date_time %>
    <%= f.datetime_select :date_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :location %>

    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :details %>

    <%= f.text_field :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :comments %>

    <%= f.text_field :comments, class: "form-control" %>
  </div>

  <%= f.submit "Create event", class: "btn btn-block btn-outline-secondary" %>
<% end %>
