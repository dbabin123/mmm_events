<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rsvps

    <a data-toggle="collapse" href="#profile_rsvps_new_form">
      Add going
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @profile.rsvps.each do |going| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to going, going %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="profile_rsvps_new_form">
        <%= render partial: "profiles/profile_rsvps_new_form" %>
      </div>
    </div>

  </ul>
</div>
